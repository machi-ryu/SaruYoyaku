<h1>Sarus#new</h1>
<p>Find me in app/views/sarus/new.html.erb</p>

<%= form_for(@saru) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :stime %>
    <%= f.datetime_select :stime, {
        discard_year: true,
        minute_step: 15 } %>

    <%= f.label :etime %>
    <%= f.datetime_select :etime, {
        discard_year: true,
        minute_step: 15 } %>

    <%= f.label :menu %>
    <%= f.text_field :menu %>

    <%= f.submit "Saru登録", class:"btn btn-primary" %>
<% end %>